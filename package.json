{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build:css": "yarn workspace @molecule-ui/styles build",
    "build:icons": "yarn workspace @molecule-ui/icons build",
    "build:components": "yarn workspace @molecule-ui/react build",
    "bootstrap": "lerna bootstrap",
    "build:docs": "yarn bootstrap && yarn docs",
    "upload": "lerna publish",
    "ls": "lerna ls",
    "create:component": "sh component.sh"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
